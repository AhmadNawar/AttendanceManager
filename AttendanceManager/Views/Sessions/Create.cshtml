
@{
    ViewBag.Title = "Create New Lecture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AttendanceManager.Models.SessionCreateVm
<h2>GetLectures</h2>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link active" href="@Url.Action("Create","Sessions")">Create a new lecture</a></li>
        <li class="page-item"><a class="page-link" href="@Url.Action("GetLectures","Sessions")">Review Lectures</a></li>
    </ul>
</nav>
<div class="container">
    <div class="row d-flex justify-content-center">
        @using (Html.BeginForm("Create", "Sessions", FormMethod.Post))
        {
            <div class="col-6">
                <p>Enter Title for Lecture:</p>
                @Html.EditorFor(x=>x.Title)
                <input type="submit" class="btn btn-success" value="Create New Lecture"/>
            </div>
        }
    </div>
</div>